/*POINTERS*/

#include<bits/stdc++.h>
using namespace std;

int main(){
	int marks[5];
	marks[0] = 78;
	marks[1] = 89;
	marks[2] = 67;
	marks[3] = 80;
	marks[4] = 95;
	
	int *p = marks;
	cout<<"The value of marks[0] is "<<*p<<endl;
	cout<<"The value of marks[1] is "<<*(p+1)<<endl;
	cout<<"The value of marks[2] is "<<*(p+2)<<endl;
	cout<<"The value of marks[3] is "<<*(p+3)<<endl;
	cout<<"The value of marks[4] is "<<*(p+4)<<endl;
}
